
<p id="notice"><%= notice %></p>
<% if current_user.try(:admin?) %>
<h1>Listing Donations</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Amount</th>
      <th>Charity</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.amount %></td>
        <td><%= donation.charity %></td>
        <td><%= donation.date %></td>
        <td><%= link_to 'View Details', donation %></td>
        <td><%= link_to 'Edit Details', edit_donation_path(donation) %></td>
        <td><%= link_to 'Delete', donation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Donation', new_donation_path %>
<% end %>
