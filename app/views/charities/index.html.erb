<body>
  <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Black Rock</a>
          </div>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li class="active"><a href="http://localhost:3000/charities">Charities</a></li>
              <li><a href="http://localhost:3000/donations">Donations</a></li>
              
            </ul>
            
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>
  <p id="notice"><%= notice %></p>

  <h1>Listing Charities</h1>

  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Address</th>
        <th>Website</th>
        <th>Email</th>
        <th>Poc</th>
        <th>Phone</th>
        <th>Tax code</th>
        <th>Total</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @charities.each do |charity| %>
        <tr>
          <td><%= charity.name %></td>
          <td><%= charity.description %></td>
          <td><%= charity.address %></td>
          <td><%= charity.website %></td>
          <td><%= charity.email %></td>
          <td><%= charity.POC %></td>
          <td><%= charity.phone %></td>
          <td><%= charity.tax_code %></td>
          <td><%= charity.total %></td>
          <td><%= link_to 'Show', charity %></td>
          <td><%= link_to 'Edit', edit_charity_path(charity) %></td>
          <td><%= link_to 'Destroy', charity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Charity', new_charity_path %>
</body>