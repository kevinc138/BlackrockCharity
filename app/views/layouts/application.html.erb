			  <% else %>
			    <li><%= link_to "Sign in", new_user_session_path %></li>
			  <% end %>
			</ul>
          </div><!--/.nav-collapse -->
        </div><!--/.container-fluid -->
      </nav>

<div style="padding: 0% 10% 10% 10%">
